[volume]
command=mic_status
interval=once
markup=pango
signal=10

[weather]
command=curl -Ss 'https://wttr.in/Aigle?format="%l:+%c+%t+%m+%w"'
interval=3600

[date]
command=date +%d.%m.%y
interval=5

[time]
command=date +%R
interval=5

[time_tokyo]
command=TZ=Asia/Tokyo date +%R  | awk '{ print "Tokyo: " $1 }'
interval=5
